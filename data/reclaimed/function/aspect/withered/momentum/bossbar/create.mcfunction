# Create and set bossbar with ID
$bossbar add reclaimed:withered/momentum/player_$(id) {translate: "bossbar.reclaimed.withered.momentum"}
$bossbar set reclaimed:withered/momentum/player_$(id) players @s
$bossbar set reclaimed:withered/momentum/player_$(id) color red
$bossbar set reclaimed:withered/momentum/player_$(id) visible false
$bossbar set reclaimed:withered/momentum/player_$(id) max 12
$bossbar set reclaimed:withered/momentum/player_$(id) style notched_12
